        <activity
            android:name=".Lista_perros"
            android:exported="true" />

        <activity
            android:name=".ForgotPassword"
            android:exported="true" />

        <activity android:name=".CrearRecordatorio"
            android:exported="false"
            android:theme="@style/Theme.HappyHound_APP"/>

        <activity
            android:name=".AlarmaPaseo"
            android:exported="true"
            android:theme="@style/Theme.HappyHound_APP"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>