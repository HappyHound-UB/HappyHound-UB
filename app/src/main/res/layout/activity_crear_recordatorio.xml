<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearRecordatorio">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/GrisOscuro"
        tools:layout_editor_absoluteX="-190dp">
        <!-- Elementos de diseÃ±o de la actividad -->

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="173dp"
            android:layout_marginEnd="176dp"
            android:layout_marginBottom="662dp"
            android:src="@drawable/happyhound_logo"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="325dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="268dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="608dp"
            android:fontFamily="@font/asap_bold"
            android:text="Crear Recordatorios"
            android:textColor="@color/white"
            android:textSize="28sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/ComidaButton"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="440dp"
            android:backgroundTint="#3C3939"
            android:text="Comida"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/PaseoButton"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="311dp"
            android:backgroundTint="#3C3939"
            android:text="Paseo"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/CalendarioButton"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="175dp"
            android:backgroundTint="#3C3939"
            android:text="Calendario"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="316dp"
            android:layout_marginBottom="660dp"
            android:backgroundTint="#001F2124"
            android:shadowColor="#00FFFFFF" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="666dp"
            app:srcCompat="@drawable/arrow" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>