<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LogIn">

    <TextView
        android:id="@+id/text_MarcaApp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center|top"
        android:fontFamily="@font/asap"
        android:text="@string/happy_hound"
        android:textColor="@color/orange_letra"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textLogIn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/iniciar_sesion"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:autofillHints="@string/password"
        android:fontFamily="@font/asap"
        android:text="@string/bienvenida"
        android:textColor="@color/gris"
        android:textSize="16sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/email"
        android:textColor="@color/primary_title" />

    <EditText
        android:id="@+id/idEmailAddress"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="@string/email_example"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textContraseña"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="@string/contraseña"
        android:textColor="@color/primary_title" />

    <EditText
        android:id="@+id/idPassword"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_title"
        android:fontFamily="@font/asap_bold"
        android:text="@string/iniciar_sesion"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/textopcion"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="@font/asap"
        android:gravity="center"
        android:text="@string/opcion"
        android:textColor="@color/gris"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/googleButton"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="7.5dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
            android:fontFamily="@font/asap_bold"
            android:text="@string/google"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/facebookButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7.5dp"
            android:backgroundTint="@color/facebook_blue"
            android:fontFamily="@font/asap_bold"
            android:text="@string/facebook"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/forgotPasswordButton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/forgotPassword"
        android:textColor="@color/gris"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/SignUpButton"
        android:clickable="true"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/signUp"
        android:textColor="@color/primary_title"
        android:gravity="center"
        android:textSize="18sp" />

</LinearLayout>