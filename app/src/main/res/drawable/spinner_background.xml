<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/fondo_boton_orange"/>
                    <corners android:radius="8dp"/>
                    <padding android:right="10dp"/>
                    <stroke android:color="@color/black" android:width="0.5dp" android:radius="8dp"/>.
                </shape>
            </item>

            <item>
                <bitmap android:gravity="center|end" android:src="@drawable/ic_launcher_background" />
            </item>
        </layer-list>
    </item>
</selector>